<!DOCTYPE html>
<html>
  <head>
      <title>WebCampBackendNew</title>
         <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  
    <h1>Books</h1>
    
    <table>
        
        <% @books.each do |book| %>
        
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      
      <tbody>
       <tr>
           <th><%= book.title %></th>
           <th><%= book.body %></th>
           <th><%= link_to "Show", book_path(book) %></th> 
           <th><%= link_to "Edit", edit_book_path(book) %></th> 
           <th><%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></th>
       </tr>
       
       
       
      </tbody>
      
      <%end%>
      
    </table>
    
    
    <h2>New book</h2>
    
    <div class="error-message">
      
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors detected.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    
    </div>
    
    
    
    
    <%= form_with model: Book.new do |f| %>
     
     <h4>Title</h4>
    <%= f.text_field :title %>
      
     <h4>Body</h4>
    <%= f.text_area :body %>
     
      
    <p><%= f.submit 'Create Book' %></p>
  
    
    <% end %>
    

    
  </body>

</html>